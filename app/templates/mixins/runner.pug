mixin runner(data)

	- var val = data[0];

	.runner(
		data-min= val.min
		data-max= val.max
		data-step= val.step
	)
		.runner__wrap
			.runner__title= val.title
			.runner__item

		.runner__cost.runner__cost_empty(data-unit= val.unit)!= val.min

		input.runner__hidden-min(type='hidden' value= val.min)
		input.runner__hidden-max(type='hidden' value= val.max)