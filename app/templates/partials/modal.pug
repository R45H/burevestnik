include ../mixins/input
include ../mixins/file-input

// MODAL
#modal.modal
	.modal__wrap

		.modal__head
			h4.subtitle.subtitle_lg Откликнуться на вакансию
			.modal__close

		.modal__body
			form

				+input({
					title: 'ФИО',
					cls: ['name', 'space_bot']
				})

				+input({
					title: 'Номер телефона',
					type: 'tel',
					cls: ['tel', 'space_bot']
				})

				+input({
					title: 'Сообщение',
					textarea: true,
					cls: ['message', 'space_bot']
				})(class='modal__textarea')

				.modal__btn-wrap

					+file-input({
						id: 'file1',
						text: 'Прикрепить резюме'
					})(class='modal__btn')

					input.btn.btn_fill.modal__btn(type='button' value='Отправить отклик' data-message='message' data-message-delay='2000')

				input.js-modal__hidden-title(type='hidden')

		#message.message
			.title.title_white.main__space-bot-half Спасибо!
			.subtitle.subtitle_white.subtitle_lg.main__space-bot-half Ваш отклик успешно отправлен.