include ../mixins/bread
include ../mixins/card
include ../mixins/input

.section.section_space-bot_none
	.container
		+bread(class= 'main__bread')
		h1.title= page.title

.section.section_space-bot_none
	.container
		.row
			.col-sm-8.col-lg-7.offset-lg-1.main__space-bot-half
				+input({
					title: 'Поиск по обозначению',
					cls: ['search']
				})

			.col-sm-4.col-lg-3.main__space-bot-half
				a.btn.btn_wide(href='#') Найти изделия

		hr.main__space-top-half

.section
	.container

		.row

			each val, i in card_catalog_2
				.col-sm-6.col-md-4.col-lg-3.main__space-col
					+card(val)

				- if (i == 11) break;

.section.section_space-top_none
	.container
		.text
			p= 'Подробнее о товарах по ссылке: '
				a(href='#') https://google.ru/