include ../mixins/bread
include ../mixins/card
include ../components/filter

.section.section_space-bot_none
	.container
		+bread(class= 'main__bread')
		h1.title= page.title

.section
	.container
		.row
			.col-sm-5.col-md-4.col-lg-3.main__space-col
				+filter(filter[0])(class='main__space-col')
				a.btn.btn_wide(href='#') Найти изделия

			.col-sm-7.col-md-8.col-lg-9
				.row

					each val in card
						.col-md-6.col-lg-4.main__space-col
							+card(val)