include ../mixins/cat

.section.section_blur.section_space-bot_half(style='background-image: url(img/content/banners/04.jpg);')
	.section__fill.section__fill_bright
	.container
		h2.title Мы производим

		.row.justify-content-between

			- var cnt = 0
			each val in cat

				if cnt
					.hidden-md.col-lg-1

				.col-sm-6.col-md-4.col-lg-3.main__cat-wrap
					+cat(val)

				if cnt == 2
					- cnt = 0
				else
					- cnt++

.section
	.container
		h2.title Последние новости

	include ../components/news-wrap