.section.section_space-bot_none
    .container
        +bread(class= 'main__bread')
        h1.title= page.title

.section.section_space-bot_none
    .container
        .row
            .col-3.main__space-col
                +select(select)

            .col-3.main__space-col
                +select(select_2)

            .col-3.main__space-col

            .col-3.main__space-col
                +select(select_3)

            .col-3.main__space-col
                +select(select_4)

            .col-3.main__space-col
                +select(select_5)

            .col-3.main__space-col

            .col-3.main__space-col
                a.btn.btn_wide(href='#') Найти изделия

.section.section_space-top_none
    .container
        hr.main__space-top-half.main__space-bot
